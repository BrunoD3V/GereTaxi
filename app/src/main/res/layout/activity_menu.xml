<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="p4.geretaxi.MenuActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/iniciar_servico"
        android:id="@+id/buttonIniciaServico"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:onClick="onClickIniciarServico"
        android:textColor="#ffffff"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestão de Clientes"
        android:id="@+id/btnGerirClientes"
        android:background="@color/colorPrimaryDark"
        android:onClick="onClickGerirClientes"
        android:textColor="#ffffff"
        android:layout_below="@+id/buttonIniciaServico"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonIniciaServico"
        android:layout_alignEnd="@+id/buttonIniciaServico" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestão de Serviços"
        android:id="@+id/btnGestaoDeServicos"
        android:layout_below="@+id/btnGerirClientes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnGerirClientes"
        android:layout_alignEnd="@+id/btnGerirClientes"
        android:onClick="onClickGerirServicos"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff" />
</RelativeLayout>
